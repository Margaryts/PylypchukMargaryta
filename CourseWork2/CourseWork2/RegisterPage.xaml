<Page x:Class="CourseWork2.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork2"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Background="#cce6ff">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="616" Height="488">
            <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#00284d">
                Register
            </TextBlock>

            <StackPanel Margin="0,0,0,20">
                <Label Content="Full Name" HorizontalAlignment="Left" FontSize="18" Foreground="#00284d" FontFamily="Arial"/>
                <TextBox x:Name="textBoxFullName" Width="500" Height="45" Padding="10" FontSize="14" BorderBrush="#3E3E3E" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label Content="Email" HorizontalAlignment="Left" FontSize="18" Foreground="#00284d" FontFamily="Arial"/>
                <TextBox x:Name="textBoxEmail" Width="500" Height="45" Padding="10" FontSize="14" BorderBrush="#3E3E3E" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label Content="Password" HorizontalAlignment="Left" FontSize="18" Foreground="#00284d" FontFamily="Arial"/>
                <PasswordBox x:Name="passwordBox" Width="500" Height="45" Padding="10" FontSize="14" BorderBrush="#3E3E3E" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label Content="Phone" HorizontalAlignment="Left" FontSize="18" Foreground="#00284d" FontFamily="Arial"/>
                <TextBox x:Name="phoneBox" Width="500" Height="45" Padding="10" FontSize="14" BorderBrush="#3E3E3E" BorderThickness="1"/>
            </StackPanel>

            <Button Content="Register" HorizontalAlignment="Center" Width="150" Height="40" Margin="0,10,0,0" Click="Button_Reg_Click" Background="#00284d" Foreground="White" FontWeight="Bold" BorderBrush="#00284d" BorderThickness="1" FontSize="18">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>
